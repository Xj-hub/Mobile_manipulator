<launch>
    <!-- Run the map server -->
        <arg name="map_file_name" default="small_room"/>

    <arg name="map_file" default="$(find mobile_base_navigation)/maps/$(arg map_file_name).yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
        <param name="frame_id" value="map"/>
    </node>
</launch>